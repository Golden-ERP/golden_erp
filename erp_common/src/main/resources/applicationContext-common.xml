        <property name="jdbcUrl" value="jdbc:mysql://localhost:3306/erp_iam"/>
        <property name="user" value="root"/>
        <property name="password" value="U2kgRElFVSBlc3QgcG91ciBub3VzIH@!!"/>
        <property name="minPoolSize" value="3"/>
        <property name="maxPoolSize" value="20"/>
        <property name="acquireIncrement" value="5"/>
        <property name="idleConnectionTestPeriod" value="3000"/>
        <property name="maxStatements" value="50"/>
        <property name="checkoutTimeout" value="10000"/>
    </bean>
    <context:component-scan base-package="com.goldenconsultingci.erp.common.spring.security"/>
    <bean id="webConfig" class="com.goldenconsultingci.erp.common.spring.security.WebConfig" autowire="byName"/>
    <bean id="securityConfig" class="com.goldenconsultingci.erp.common.spring.security.SecurityConfig" autowire="byName"/>
