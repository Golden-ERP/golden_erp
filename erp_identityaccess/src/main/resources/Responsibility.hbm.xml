<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" default-cascade="all">
    <class name="com.goldenconsultingci.erp.identityaccess.domain.model.identity.Responsibility" table="tbl_iam_responsibility" lazy="true">
        <id name="id" type="long" column="id" unsaved-value="-1">
            <generator class="native"/>
        </id>
        <property name="name" column="name" type="java.lang.String"/>
        <property name="description" type="java.lang.String"/>
        <set name="roles" table="tbl_iam_responsibility_role">
            <key column="responsibility_id"/>
            <many-to-many column="role_id" class="com.goldenconsultingci.erp.identityaccess.domain.model.access.Role"/>
        </set>
    </class>
</hibernate-mapping>