    <bean id="userRepository" class="com.goldenconsultingci.erp.identityaccess.infrastructure.persistence.HibernateUserRepository" autowire="byName"/>
    <bean id="userRegistrationService" class="com.goldenconsultingci.erp.identityaccess.domain.model.identity.UserRegistrationService">
        <constructor-arg ref="userRepository"/>
