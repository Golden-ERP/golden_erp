<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" default-cascade="all">
    <class name="com.goldenconsultingci.erp.identityaccess.domain.model.identity.Actor" table="tbl_iam_actor" lazy="true">
        <id name="id" type="long" column="id" unsaved-value="-1">
            <generator class="foreign">
                <param name="property">user</param>
            </generator>
        </id>
        <version column="concurrency_version" name="concurrencyVersion" type="int" />
        <component name="contactInformation" class="com.goldenconsultingci.erp.identityaccess.domain.model.identity.ContactInformation">
            <component name="primaryTelephone" class="com.goldenconsultingci.erp.identityaccess.domain.model.identity.Telephone">
                <property name="number" column="contact_information_primary_telephone" type="java.lang.String" />
            </component>
            <component name="secondaryTelephone" class="com.goldenconsultingci.erp.identityaccess.domain.model.identity.Telephone">
                <property name="number" column="contact_information_secondary_telephone" type="java.lang.String" />
            </component>
            <component name="emailAddress" class="com.goldenconsultingci.erp.identityaccess.domain.model.identity.EmailAddress">
                <property name="address" column="email_address" type="java.lang.String" />
            </component>
        </component>
        <component name="name" class="com.goldenconsultingci.erp.identityaccess.domain.model.identity.FullName">
            <property name="firstName" column="first_name" type="java.lang.String"/>
            <property name="lastName" column="last_name" type="java.lang.String"/>
        </component>
        <property name="gender" column="gender" type="com.goldenconsultingci.erp.identityaccess.domain.model.identity.Gender"/>
        <property name="occupation" column="occupation" type="java.lang.String"/>
        <one-to-one name="user"  class="com.goldenconsultingci.erp.identityaccess.domain.model.identity.User" cascade="all" lazy="false" constrained="true"/>
    </class>
</hibernate-mapping>